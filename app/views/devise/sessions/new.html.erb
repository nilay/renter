<style>
    .gradient-custom-2 {
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, #986a30, #f7f09d, #b79653, #926228);
    }

    @media (min-width: 768px) {
        .gradient-form {
            height: 100vh !important;
        }
    }
    @media (min-width: 769px) {
        .gradient-custom-2 {
            border-top-right-radius: .3rem;
            border-bottom-right-radius: .3rem;
        }
    }
</style>
<section class="h-100 gradient-form" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="/logo.png"
                       style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">We are The Go-Rental </h4>
                </div>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <p>Please login to your account</p>

                  <div class="form-outline mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>

                    <label class="form-label" for="form2Example11">Username</label>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                    <label class="form-label" for="form2Example22">Password</label>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <%= f.submit "Log in", class: "btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
                    <%= render "devise/shared/links" %>
                  </div>

                <% end %>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">We power property management</h4>
                <p class="small mb-0">Build and manage your leasing rentals properties from one central platform</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>