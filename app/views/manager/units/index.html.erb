<div class="row">
  <div class="col-md-12">
    <div class="main-card mb-3 card">
      <div class="card-header">Leasing &nbsp;
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
          New Units
        </button>
        <div class="btn-actions-pane-right">
          <div role="group" class="btn-group-sm btn-group">
            <button class="active btn btn-focus">Vacant</button>
            <button class="btn btn-focus">Occupied</button>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
          <thead>
          <tr>
            <th class="text-center">#</th>
            <th>Unit Type</th>
            <th>Sqr Meter</th>
            <th class="text-center">Year Built</th>
            <th class="text-center">Status</th>
            <th class="text-center">Actions</th>
          </tr>
          </thead>
          <tbody>

          <% @units.each do |unit| %>

            <tr>
              <td class="text-center text-muted">#<%=unit.unit_no %></td>
              <td>
                <div class="widget-content p-0">
                  <div class="widget-content-wrapper">
                    <div class="widget-content-left flex2">
                      <div class="widget-heading"><%= unit.unit_type.name %></div>
                    </div>
                  </div>
                </div>
              </td>
              <td class="text-center">
                <div class="widget-content p-0">
                  <div class="widget-content-wrapper">
                    <div class="widget-content-left flex2">
                      <div class="widget-heading"><%= unit.sql_meter %></div>
                    </div>
                  </div>
                </div>

              </td>
              <td class="text-center">
                <%= unit.year_built %>
               </td>
              <td class="text-center">
                <div class="badge badge-warning"> <%= unit.status  %></div>
              </td>
              <td class="text-center">
                <a href="<%= manager_unit_path(unit) %>"><button type="button" id="PopoverCustomT-1" class="btn btn-primary btn-sm">Details</button></a>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
  <%= will_paginate @units, renderer: BootstrapPagination::Rails %>
</div>
